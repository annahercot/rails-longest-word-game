<div class = "text-center"><h1>NEW GAME</h1>
</div>
<ul>
<div class = "list-inline">

  <% @letters.each do |letter| %>
    <li class="list-inline-item"><%= letter %></li>
  <% end  %>
  </ul>
</div>

<div class="word">
  <h1>What is the longest word you can find?</h1>
  <form action="/score" method="post">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
     <%= hidden_field_tag :letters, @letters %>
      <input type="text" class="form-control " name="your_word" id="" placeholder="gmregnongreoi">
    <button type="submit" class="btn btn-primary">Play</button>
  </form>
</div>
